# CityForge Mumbai Pulse - Environment Variables Template
# Copy this file to .env and fill in your actual credentials

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Meteomatics Weather API Credentials
# Get these from: https://www.meteomatics.com/
# After claiming the NASA Space Apps Challenge offer
METEOMATICS_USERNAME=your-meteomatics-username
METEOMATICS_PASSWORD=your-meteomatics-password

# Optional: Database Configuration (for future use)
DATABASE_URL=sqlite:///mumbai_pulse.db

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Performance Settings
MAX_WORKERS=4
